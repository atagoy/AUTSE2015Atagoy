<form>
    <fieldset name="crystalline_fusion">
        <field name="fusion_load_css" type="list" label="Load CSS:">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </field>
        <field name="fusion_enable_js" type="list" label="Enable Javascript:">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </field>
        <field name="fusion_opacity" type="list" label="Menu Opacity:">
            <option value="0">0</option>
            <option value="0.1">0.1</option>
            <option value="0.2">0.2</option>
            <option value="0.3">0.3</option>
            <option value="0.4">0.4</option>
            <option value="0.5">0.5</option>
            <option value="0.6">0.6</option>
            <option value="0.7">0.7</option>
            <option value="0.8">0.8</option>
            <option value="0.9">0.9</option>
            <option value="1">1</option>
        </field>
        <field name="fusion_effect" type="list" label="Menu Effect:">
            <option value="slide">Slide</option>
            <option value="slidefade">Slide &amp; Fade</option>
        </field>
        <field name="fusion_hidedelay" type="text" label="Hide Delay (in ms):" size="4"/>
        <field name="fusion_menu_animation" type="animation" label="Menu Animation:"/>
        <field name="fusion_menu_duration" type="text" label="Menu Duration (in ms):" size="4"/>
        <field name="fusion_pill" type="list" label="Enable Pill:">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </field>
        <field name="fusion_pill_animation" type="animation" label="Pill Animation:"/>
        <field name="fusion_pill_duration" type="text" label="Pill Duration (in ms):" size="4"/>
        <field name="fusion_centeredOffset" type="list" label="Centered Dropdowns:">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </field>
        <field name="fusion_tweakInitial_x" type="text" label="Level 2 X Offset (in pixels):" size="4"/>
        <field name="fusion_tweakInitial_y" type="text" label="Level 2 Y Offset (in pixels):" size="4"/>
        <field name="fusion_tweakSubsequent_x" type="text" label="Submenus X Offset (in pixels):" size="4"/>
        <field name="fusion_tweakSubsequent_y" type="text" label="Submenus Y Offset (in pixels):" size="4"/>
        <field name="fusion_enable_current_id" type="list" label="Enable Active ID:">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </field>
    </fieldset>
</form>